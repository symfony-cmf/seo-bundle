<?xml version="1.0" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_seo.sitemap.phpcr_loader.class">Symfony\Cmf\Bundle\SeoBundle\Doctrine\Phpcr\SitemapDocumentProvider</parameter>
        <parameter key="cmf_seo.sitemap.phpcr_simple_guesser.class">Symfony\Cmf\Bundle\SeoBundle\Doctrine\Phpcr\SimpleUrlInformationGuesser</parameter>
        <parameter key="cmf_seo.sitemap.phpcr.public_workflow_voter.class">Symfony\Cmf\Bundle\SeoBundle\Doctrine\Phpcr\PublicWorkflowUrlInformationVoter</parameter>
    </parameters>

    <services>
        <service id="cmf_seo.sitemap.phpcr_loader" class="%cmf_seo.sitemap.phpcr_loader.class%" public="false">
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>

            <tag name="cmf_seo.sitemap.loader" />
        </service>

        <service id="cmf_seo.sitemap.phpcr.public_workflow_voter" class="%cmf_seo.sitemap.phpcr.public_workflow_voter.class%">
            <argument type="service" id="cmf_core.publish_workflow.checker" />
            <tag name="cmf_seo.sitemap.voter" />
        </service>
    </services>
</container>
