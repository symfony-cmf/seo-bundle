<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_seo.config_values.class">Symfony\Cmf\Bundle\SeoBundle\Model\SeoConfigValues</parameter>

        <parameter key="cmf_seo.form.type.seo_metadata.class">Symfony\Cmf\Bundle\SeoBundle\Form\Type\SeoMetadataType</parameter>
        <parameter key="cmf_seo.presentation.class">Symfony\Cmf\Bundle\SeoBundle\Model\SeoPresentation</parameter>
        <parameter key="cmf_seo.event_lister.seo_content.class">Symfony\Cmf\Bundle\SeoBundle\EventListener\SeoContentListener</parameter>

        <parameter key="cmf_seo.extractor_strategy.title.class">Symfony\Cmf\Bundle\SeoBundle\Extractor\SeoTitleExtractor</parameter>
        <parameter key="cmf_seo.extractor_strategy.read_title.class">Symfony\Cmf\Bundle\SeoBundle\Extractor\TitleReadExtractor</parameter>
        <parameter key="cmf_seo.extractor_strategy.description.class">Symfony\Cmf\Bundle\SeoBundle\Extractor\SeoDescriptionExtractor</parameter>
        <parameter key="cmf_seo.extractor_strategy.original_url.class">Symfony\Cmf\Bundle\SeoBundle\Extractor\SeoOriginalUrlExtractor</parameter>
        <parameter key="cmf_seo.extractor_strategy.original_route.class">Symfony\Cmf\Bundle\SeoBundle\Extractor\SeoOriginalRouteExtractor</parameter>
    </parameters>
    <services>
        <service id="cmf_seo.config_values" class="%cmf_seo.config_values.class%">
            <call method="setTitleKey"><argument>%cmf_seo.title%</argument></call>
            <call method="setDescriptionKey"><argument>%cmf_seo.description%</argument></call>
            <call method="setTranslationDomain"><argument>%cmf_seo.translation_domain%</argument></call>
            <call method="setOriginalRoutePattern"><argument>%cmf_seo.original_route_pattern%</argument></call>
        </service>
        <service id="cmf_seo.form.type.seo_metadata" class="%cmf_seo.form.type.seo_metadata.class%">
            <tag name="form.type" alias="seo_metadata" />
        </service>
        <service id="cmf_seo.presentation" class="%cmf_seo.presentation.class%">
            <argument type="service" id="sonata.seo.page" />
            <argument type="service" id="translator" />
            <argument type="service" id="cmf_seo.config_values" />
        </service>
        <service id="cmf_seo.event_lister.seo_content" class="%cmf_seo.event_lister.seo_content.class%">
            <argument type="service" id="cmf_seo.presentation"/>
            <argument>%cmf_seo.content_key%</argument>
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest"/>
        </service>

        <service id="cmf_seo.extractor_strategy.title" class="%cmf_seo.extractor_strategy.title.class%">
            <tag name="cmf_seo.extractor"/>
        </service>
        <service id="cmf_seo.extractor_strategy.read_title" class="%cmf_seo.extractor_strategy.read_title.class%">
            <tag name="cmf_seo.extractor"/>
        </service>
        <service id="cmf_seo.extractor_strategy.description" class="%cmf_seo.extractor_strategy.description.class%">
            <tag name="cmf_seo.extractor"/>
        </service>
        <service id="cmf_seo.extractor_strategy.original_url" class="%cmf_seo.extractor_strategy.original_url.class%">
            <tag name="cmf_seo.extractor"/>
        </service>
        <service id="cmf_seo.extractor_strategy.original_route" class="%cmf_seo.extractor_strategy.original_route.class%">
            <tag name="cmf_seo.extractor"/>
            <call method="setRouter">
                <argument type="service" id="router.default" />
            </call>
        </service>
    </services>

</container>
